{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // Use ESNext for ES module compatibility
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true, // Generate declaration files for type support
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
